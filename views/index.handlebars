    <h1 class="text-center" id="Title" style="background-color:#b70379">
      <p class="first">
        <span class="another">Meet people with InTheBand</span>
      </p>
    </h1>
  </div>
  <div id="hero-bottom">
    <div class="container">
      <div class="row">
        <div class="col" id="signup-col">
          <button class="btn btn-primary" id="login-btn" type="button">Log in
          </button>
          <p style="font-weight:600">Don't Have An Account?
            <a id="signup-btn">Sign Up</a>
          </p>
        </div>
      </div>
    </div>
  </div>

  {{!-- Login Modal --}}
  <div id="login-modal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"></h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="login-dark">
            <form class="modal-css">
              <h2 class="sr-only">Login Form</h2>
              <div class="illustration">
                <i class="icon ion-ios-locked-outline"></i>
              </div>
              <div class="form-group">
                <input class="form-control" id="login-email" type="email" name="email" placeholder="Email">
              </div>
              <div class="form-group">
                <input class="form-control" id="login-password" type="password" name="password" placeholder="Password">
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-block modal-btn-style" id="login-submit" type="submit">Log In</button>
              </div>
              <a href="#" class="forgot">Forgot your email or password?</a>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-light" type="button" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  {{!-- Sign Up Modal --}}
  <div id="signup-modal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"></h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="login-dark">
            <form method="POST" action="/sign-up">
              <h2 class="sr-only">Login Form</h2>
              <div class="illustration">
                <i class="icon ion-ios-locked-outline"></i>
              </div>
              <div class="form-group">
                <input class="form-control" id="email" type="email" email="email" placeholder="E-mail">
              </div>
              <div class="form-group">
                <input class="form-control" id="password" type="password" password="password" placeholder="Password">
              </div>
              <div class="form-group">
                <input class="form-control" id="handle" type="handle" handle="handle" placeholder="@partyboy">
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-block modal-btn-style" id="signup-submit" type="submit">Sign Up</button>
              </div>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-light" type="button" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

</section>

<script>
  $("#login-btn").on('click', function () {
    $("#login-modal").modal("toggle");
  });

  $("#signup-btn").on('click', function () {
    $("#signup-modal").modal("toggle");
  });
  $("#login-clicky").on('click', function () {
    $("#login-modal").modal("toggle");
  });

  $("#signup-clicky").on('click', function () {
    $("#signup-modal").modal("toggle");
  });
</script>