<style>


  .list-group-item {
    line-height: 2.5;
  }

  #itb-hero {
    width: 100%;
    height: 100vh;
    background-image: url("../images/smallgroup4.jpg");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .navbar-light .navbar-brand {
    font-family: 'Black Ops One', cursive;
    width: 150px;
    background-position: center;
    background-size: 80%;
    color: rgba(0, 0, 0, 0.9);
    background-color: rgba(255, 255, 255, 0.22);
    padding-left: 10px;
  }

  #navcol-1 {
    text-transform: uppercase;
  }

  #headings {
    font-family: 'Black Ops One', cursive;
  }

  #col-checkbox {
    text-align: center;
  }

  #dash-heading {
    padding-top: 50px;
    text-align: center;
    color: #aca9a9;
  }

  #dash-events-div {
    margin: auto;
    text-align: center;
  }

  #dash-events-title {
    font-weight: 650;
  }
</style>

<nav class="navbar navbar-light navbar-expand-md fixed-top bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">inTheBand&nbsp;
      <i class="fa fa-circle-o-notch"></i>
    </a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navcol-1">
      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item" role="presentation">
          <a class="nav-link active" href="#" id="create-event">Create an Event</a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" href="#" id="login-link">Notifications
          </a>
        </li>
        <li class="nav-item" role="presentation">
          <a class="nav-link" href="#" id="signup-link">Sign Out
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<section>
  <div class="your-events">
    <h1 id="eventname" style="padding:50px;">Event Name{{event.title}}</h1>
    <div class="row">
      <div class="col">
        <p>Date{{event.date}}</p>
      </div>
      <div class="col">
        <p>Venue{{event.venue}}</p>
      </div>
      <div class="col">
        <p>Address{{event.address}}</p>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>Going</p>
      </div>
      <div class="col">
        <p>Map</p>
      </div>
      <div class="col">
        <p>Attending</p>
        <div id="attend-icon" class="col">
          {{attending.number}}
        </div>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="upcoming-events">
    <h1>Comments</h1>
    <div id="comments-div">
      {{#each attending.comments}}
      <h2> {{User.handle}} </h2>
      <h2> {{user_comment}} </h2>
      {{/each}}
    </div>
  </div>
  <footer id="add-comment">
    <form>
      <textarea rows="4" cols="50" name="comment" id = "comment" placeholder="Enter your comment here..."></textarea>
      <div class="form-group">
        <button class="btn btn-primary btn-block modal-btn-style" id="comment-submit" type="submit">Submit</button>
    </form>
    </div>
  </footer>
</section>